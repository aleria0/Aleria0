--// VonX HUB | Encrypted Key + Neon UI + Discord Button

repeat task.wait() until game:IsLoaded()

local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")
local lp = Players.LocalPlayer

-- =========================
-- ENCRYPTED KEY SYSTEM
-- =========================
local _enc = {178,207,201,160,199,198,202,207,240,201,206,242}
local _xor = 123

local function _checkKey(input)
    if #input ~= #_enc then return false end
    for i = 1, #_enc do
        if bit32.bxor(input:byte(i), _xor) ~= _enc[i] then
            return false
        end
    end
    return true
end

-- =========================
-- CLEAN OLD GUI
-- =========================
if getgenv().SkidHubGUI then
    getgenv().SkidHubGUI:Destroy()
    getgenv().SkidHubGUI = nil
end
if CoreGui:FindFirstChild("VonX_Login") then CoreGui.VonX_Login:Destroy() end

